/* --- pre-footer_Home --- */
.pre_footer
	background celeste
	border-top 10px solid celeste_bajo
	color letra
	width 100%
	.content_pre
		margin 0 auto
		max-width 100%
		min-width 768px
		padding 1em 0
		width 1200px
		.footer_menu, .noticias, .timeline
			display inline-block
			margin 5px
			vertical-align top
			text-align left
			width 32%
			h2
				font-weight 500
				padding-left 10px
				margin-bottom 25px
				.ico-h2
					display inline-block
					font-size .8em
					font-weight normal
					position relative
					right 10px
					margin 0 auto
					&:before
						color letra
						font-family "sin_icons"
				.ico-noticia
					&:before
						content "\e612"
				.ico-foo_menu
					&:before
						content "\e601"
		.footer_menu
			padding 0
			a
				display inlineblock
				margin 7px auto
				position relative
				overflow hidden
				vertical-align middle
				text-decoration none
				.ico
					background celeste_claro_fondo
					display inline-block
					font-size 1.4em
					margin 0 auto
					padding .3em .6em
					transition all ease-in-out 0.2s
					&:before
						color letra
						font-family "sin_icons"
						padding 0.1em
						transition all ease-in-out 0.2s
				.ico-facebook
					&:before
						content "\e60b"
				.ico-facebook:hover
					background #3b5998
					&:before
						color letra
				.ico-twitter
					&:before
						content "\e60d"
				.ico-twitter:hover
					background #9AE4E8
					&:before
						color letra
				.ico-google
					&:before
						content "\e60c"
				.ico-google:hover
					background #CE3D2B
					&:before
						color letra
			ul
				margin-bottom 1em
				li
					line-height 1em
					font-size .9em
					font-weight 500
					a
						.ico_li
							display inline-block
							font-size 1em
							padding .3em
							&:before
								color letra
								content "\e615"
								font-family "sin_icons"
								padding .1em
					a:hover
						.ico_li
							&:before
								color rojo
		.noticias
			.noti_arti
				margin-bottom 18px
				min-height 60px
				time, .entry_cont
					display inline-block
					vertical-align top
				time
					background celeste_claro_fondo
					text-align center
					padding .4em
					.dia, .mes
						display block
						font-size 1.4em
						line-height 18px
					.dia
						padding-top 2px
					.mes
						padding-bottom 8px
				.entry_cont
					margin-left 80px
					margin-top -3.8em
					a
						font-size .9em
						font-weight 700
						line-height 1
					p
						font-size .8em
						font-weight 400
						
/* --- Slider --- */
.slider_head
	margin 0 auto	
	text-align center
	width 100%
	.ri-grid
		bottom 0
		height auto
		left 0
		margin 0 auto
		position relative
		right 0
		top 0
		z-index 0
		ul
			display block
			list-style none
			margin 0
			padding 0
			width 100%
			&:after,
			&:before
				content ''
				display table
			&:after
				clear both
			li
				background #000
				display block
				float left
				margin 0
				padding 0
				perspective 400px
				position relative
				overflow hidden
				a
					backface-visibility hidden
					background-color #333
					background-position center center
					background-repeat no-repeat
					background-size 100% 100%
					box-sizing content-box
					display block
					height 100%
					left 0
					outline none
					position absolute
					top 0
					transform-style preserve-3d
					width 100%
		ul
			clear both
		.conoce
			color letra
			display block
			bottom 35px
			margin 0 auto
			position absolute
			text-align center
			width 100%
			z-index 10
			a
				border 1px solid letra
				border-radius 5px
				font-size 1em
				font-weight 600
				padding .5em
				text-decoration none
				transition all ease-in-out .1s 
			a:hover
				border 2px solid rojo
		.overlay
			background rgba(8,24,38,.8)
			height 100%
			position absolute
			top 0
			width 100%
			z-index 1
		.slider_title
			color letra
			display table
			height 100%
			margin-top 8em
			position absolute
			width 100%
			z-index 2
			h1
				font-size 3.5em
				font-weight 700
				text-shadow 0 1px 2px rgba(5,5,5,.9)
				opacity 1
			h3
				font-size 2em
				font-style italic
				font-weight 500
				margin-bottom 3em
				text-shadow 0 1px 2px rgba(5,5,5,.5)
	/* Grid wrapper sizes */
	.ri-grid-size-1
		width 55%
	.ri-grid-size-2
		width 100%
	.ri-grid-size-3
		width 100%
		margin-top 0px
	/* Shadow style */
	.ri-shadow:after,
	.ri-shadow:before
		box-shadow 0 15px 10px rgba(0,0,0,.7)
		bottom 15px
		content ""
		height 20%
		left 10px
		max-height 100px
		max-width 300px
		transform rotate(-3deg)
		position absolute
		width 50%
		z-index -2
	.ri-shadow:after
		left auto
		right 10px
		transform rotate(3deg)
	.ri-grid-loading:after,
	.ri-grid-loading:before
		display none
	.ri-loading-image
		display none
	.ri-grid-loading .ri-loading-image
		display block
		height 30px
		left 50%
		margin 100px 0 0 -15px
		position relative
		width 30px
/* --- Fin-Slider --- */
	

