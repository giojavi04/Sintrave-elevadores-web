.content
	width 100%
	margin-top 0.8em
	&:after
	&:before
		content ""
		display table
		line-height 0
	&:after
		clear both
	#n_des, #sub_menu
		display inline-block
		vertical-align top
	#n_des
		float left
		margin-left 0.6em
		width 75%
		.fondo
			padding 6em 0 5em 0
			&:after
			&:before
				content " "
				display table
			&:after
				clear both
			.a_f_descripcion
				display inline
				float left
				margin 0
				overflow hidden
				transition transform 0.5s, opacity 0.5s
				&:after
				&:before
					content ""
					display table
				&:after
					clear both
				div
					width 650px
				h2
					color rojo
					font-size 1.5em
					line-height 3em
					text-transform uppercase
				ol
					color rojo
					list-style square inside
					line-height 1.7em
					padding-left 2em
					text-align left
				p
					color letra_negra
					font-size 1em
					line-height 1.7em
					text-align justify
					a
						color #dc7368
						text-decoration underline
				#n_img
					margin-top 5.7em
					width 250px
					img
						vertical-align middle
						width 250px
			.a_f_descripcion_left
				text-align left
				padding-left 5em 
				vertical-align middle
			.a_f_descripcion_right
				text-align right
				float right
				padding-right 0.5em 
				vertical-align middle

		.fondo_claro
			background fondo_blanco
		.fondo_oscuro
			background fondo_blanco_oscuro
	#sub_menu
		margin-top 6em
		position fixed
		right 0
		width 24%
		ul
			display block
			margin-right 6em
			text-align right
			li
				padding 0.5em 0
				a
					border-right 2px solid transparent
					color letra_negra
					padding 1px 5px 1px 0
					transition all 0.2s ease-in-out 
					text-decoration none
					text-transform uppercase
					.n_icon
						color letra_negra
						font-size 1.5em
						padding 0 8px
					.n_icon_nosotros
						&:before
							content "\e608"
							display inline-block
							font-family "sin_icons"
					.n_icon_garantia
						&:before
							content "\e600"
							display inline-block
							font-family "sin_icons"
					.n_icon_seguridad
						&:before
							content "\e601"
							display inline-block
							font-family "sin_icons"
					.n_icon_certificado
						&:before
							content "\e609"
							display inline-block
							font-family "sin_icons"
				a:hover
					border-right 2px solid rojo
					color #dc7368
				.active
					font-weight bold
					.n_icon
						color rojo