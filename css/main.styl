	background celeste
	border-top 10px solid celeste_bajo
	color letra
	width 100%
	.content_pre
		padding 1em 0
		width 90%
		aside
			float right
			font-size .9em
			margin 0 auto
			padding 8px 0
			text-align center
			width 15%
			a
				display block
				margin 7px auto
				position relative
				overflow hidden
				vertical-align middle
				text-decoration none
				.ico
					background celeste_claro_fondo
					display inline-block
					font-size 1.4em
					margin 0 auto
					padding 0.3em 1.5em
					transition all ease-in-out 0.2s
					&:before
