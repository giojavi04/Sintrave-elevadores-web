body
	background fondo_blanco_oscuro
	font-family 'Open Sans', Helvetica, Arial
	font-size 16px
	margin 0
	text-align center

h1, h2, h3, h4, ol, ul, li, p, a
	color inherit
	font-family inherit
	margin 0 
	padding 0
	text-rendering optimizelegibility

ol, ul
	list-style none

footer, .pre_footer
	box-sizing border-box
	padding 0.5em
	width 100%

/* --- Footer --- */
footer
	background fondo
	color letra_oscura
	.f_left
		float left
		margin-left 1em
		a
			color letra
			font-size 14px
			text-decoration none
		a:hover
			color rojo
			text-decoration underline
	.f_right
		float right
		margin-right 1em
		p
			font-size 14px
			padding-top 2px
					
/* --- Section_Home --- */
#s_section
	color letra_negra
	margin 0 auto
	padding-bottom 2em
	overflow hidden
	width 100%
	#s_a_descripcion
		background fondo_blanco
		margin inherit
		padding 3em 0 1em 0
		img
			opacity .7
			transition  all ease-in-out .3s
			width 100px
		img:hover
			opacity 1
		h2
			color celeste
			font-family Helvetica
			font-weight bold
			font-size 1.8em
			letter-spacing 1px
			margin-top 0.8em
			vertical-align middle
		h3
			font-size 1.2em
			margin 1em 5em
	.s_a_section
		margin 4em auto
		max-width 1024px
		/* Text styl */
		h2
			font-size 2.5em
			font-weight 300
			line-height 2
		p
			font-size 1.1em
			font-weight 100
			line-height 1.5
			text-align justify
		/* fin stilo de texto */
		&:after
		&:before
			content " "
			display table
		&:after
			clear both
		.s_a_side
			float left
			margin 0
			min-height 12em
			padding 0.7em 0
			overflow hidden
			transition transform 0.5s, opacity 0.5s
			width 50%
			&:after
			&:before
				content ""
				display table
			&:after
				clear both
		.s_a_side_left
			text-align right
			vertical-align middle
			.icon
				background letra_oscura
				border 5px solid letra
				border-radius 50%
				margin 0 140px
				float right
				transition all ease-in-out 0.4s
				&:before
					color letra
					display inline-block
					font-family "sin_icons"
					font-size 9em
					padding 0.2em
			.icon:hover
				border 5px solid letra_negra
			.icon_garantia
				&:before
					content "\e60a"
			.icon_mantenimiento
				&:before
					content "\e608"
		.s_a_side_right
			text-align left
			vertical-align middle
			.icon
				background letra_oscura
				border 5px solid letra
				border-radius 50%
				margin 0 140px
				float left
				transition all ease-in-out 0.4s
				&:before
					color letra
					display inline-block
					font-family "sin_icons"
					font-size 9em
					padding 0.2em
			.icon:hover
				border 5px solid letra_negra
			.icon_seguridad
				&:before
					content "\e609"
			.icon_comercio
				&:before
					content "\e604"
		/* Initial state (hidden or anything else) */
		.s_a_init .s_a_side {
			opacity: 0;
		}

		.s_a_init .s_a_side-left {
			transform translateX(-80px)
		}

		.s_a_init .s_a_side-right {
			transform translateX(80px)
		}

		/* Animated state */
		/* add you final states (transition) or your effects (animations) for each side */
		.s_a_section.s_a_animate .s_a_side-left,
		.s_a_section.s_a_animate .s_a_side-right {
			transform translateX(0px)
			opacity: 1;
		}

.clearfix, .pre_footer, footer
	zoom 1
.clearfix:after, .pre_footer:after, footer:after
	clear both
	content ""
	display block
	height 0 
	visibility hidden
.clear
	display block
	clear both
	zoom 1

/* --- header --- */
.header
	background fondo_blanco
	box-shadow 0 0 1px rgba(0,0,0, 0.7)
	overflow hidden
	margin auto
	padding 0.5em 0
	position relative
	top 0
	width 100% !important
	z-index 1000
	.hn_nav
		display inline-block
		font-size 0.9em
		float right
		margin 0 14em 0 0
		ul
			list-style none
			line-height 4em
			text-align center
			li
				display inline-block
				margin 0
				vertical-align middle
				zoom 1
				a
					color letra_negra
					display inline-block 
					font-family Open Sans, Helvetica
					font-weight 500
					padding 0.8em 0.8em
					text-decoration none
					text-transform uppercase
					text-rendering optimizelegibility
					transition all ease-in-out 0.2s
					vertical-align middle 
				a:hover
					color celeste_oscuro
					opacity 0.4
				.selected
					color celeste_oscuro
					cursor default
					opacity 0.4
	.logo
		display block
		float left
		margin 0 0 0 14em
		img
			vertical-align middle
			opacity 1
			width 283px
			transition opacity ease-in-out 0.1s
		img:hover
			opacity 0.6
/* Fin header */


